<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ly.sys.core.permission.dao.PermissionDao">
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" > 
        <property name="timeToIdleSeconds" value="3600"/><!--1 hour-->
        <property name="timeToLiveSeconds" value="3600"/><!--1 hour-->
        <property name="maxEntriesLocalHeap" value="1000"/>
        <property name="maxEntriesLocalDisk" value="100000"/>
        <property name="memoryStoreEvictionPolicy" value="LRU"/>
    </cache>
	<resultMap id="permissionResult" type="Permission">
		<id property="id" column="id" javaType="Long" />
		<result property="name" column="name" javaType="String" />
		<result property="permission" column="permission" javaType="String" />
		<result property="description" column="description" javaType="String" />
		<result property="isShow" column="is_show" javaType="Integer" />
		<result property="deleted" column="deleted" javaType="Integer" />
	</resultMap>


	<sql id="queryPermissionSql">
		<where>
      	<![CDATA[
			1=1
		 ]]>
			<if test="id!=null">
			<![CDATA[
				and T.id=#{id}
			]]>
			</if>
			<if test="name!=null">
			<![CDATA[
				and T.name like "%"#{name}"%"
			]]>
			</if>
			<if test="permission!=null">
			<![CDATA[
				and T.permission like "%"#{permission}"%"
			]]>
			</if>
			<if test="description!=null">
			<![CDATA[
				and T.description=#{description}
			]]>
			</if>
			<if test="isShow!=null">
			<![CDATA[
				and T.is_show=#{isShow}
			]]>
			</if>
			<if test="deleted!=null">
			<![CDATA[
				and T.deleted=#{deleted}
			]]>
			</if>
		</where>
	</sql>


	<select id="findById" resultMap="permissionResult"
		parameterType="long">
		<![CDATA[
		SELECT
		*
		FROM sys_permission WHERE id=#{id}
		]]>
	</select>

	<select id="findPageList" resultMap="permissionResult"
		parameterType="map">
		<![CDATA[
			SELECT T.* FROM sys_permission T 
    	]]>
		<include refid="queryPermissionSql" />
	</select>

	<select id="findCount" resultType="Integer" parameterType="map">
		<![CDATA[
        	SELECT COUNT(1) FROM sys_permission T
    	]]>
		<include refid="queryPermissionSql" />
	</select>

	<insert id="insert" parameterType="Permission">
		<![CDATA[
			INSERT INTO sys_permission(
												id,
												name,
												permission,
												description,
												is_show,
												deleted
									)VALUES(
								#{id},
												#{name},
												#{permission},
												#{description},
												#{isShow},
												#{deleted}
									)
		]]>
		<selectKey resultType="long" keyProperty="id">
			SELECT
			LAST_INSERT_ID() AS ID
		</selectKey>
	</insert>

	<update id="update" parameterType="Permission">
		<![CDATA[
			UPDATE sys_permission SET
														name=#{name},
																permission=#{permission},
																description=#{description},
																is_show=#{isShow},
																deleted=#{deleted}
										WHERE id=#{id}
		]]>
	</update>

	<delete id="delete" parameterType="long">
		<![CDATA[
			DELETE FROM sys_permission WHERE id=#{id}
		]]>
	</delete>
	<select id="findAllWithSort" parameterType="map" resultMap="permissionResult">
		select *
		from sys_permission
		where is_show=1
		and permission ne
		'anonymous'
		order by name desc
	</select>
</mapper>
