<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.ly.sys.core.auth.dao.AuthOperatorDao">
	<resultMap id="authoperatorResult" type="AuthOperator">
		<id property="id" column="id" javaType="Long" />
		<result property="operatorId" column="operator_id" javaType="Long" />
		<result property="roleIds" column="role_ids" javaType="String" />
	</resultMap>


	<sql id="queryAuthOperatorSql">
		<where>
      	<![CDATA[
			1=1
		 ]]>
			<if test="id!=null">
			<![CDATA[
				and T.id=#{id}
			]]>
			</if>
			<if test="operatorId!=null">
			<![CDATA[
				and T.operator_id=#{operatorId}
			]]>
			</if>
			<if test="roleIds!=null">
			<![CDATA[
				and T.role_id=#{roleIds}
			]]>
			</if>
		</where>
	</sql>


	<select id="findById" resultMap="authoperatorResult"
		parameterType="long">
		<![CDATA[
		SELECT
		*
		FROM sys_auth_operator WHERE id=#{id}
		]]>
	</select>
  
	<select id="findByOperatorId" resultMap="authoperatorResult" parameterType="long">
		<![CDATA[
		SELECT
		*
		FROM sys_auth_operator WHERE operator_id=#{operatorId}
		]]>
	</select>

	<select id="findPageList" resultMap="authoperatorResult" parameterType="map">
		<![CDATA[
			SELECT T.* FROM sys_auth_operator T 
    	]]>
		<include refid="queryAuthOperatorSql" />

	</select>

	<select id="findCount" resultType="Integer" parameterType="map">
		<![CDATA[
        	SELECT COUNT(1) FROM sys_auth_operator T
    	]]>
		<include refid="queryAuthOperatorSql" />
	</select>

	<insert id="insert" parameterType="AuthOperator">
		<![CDATA[
			INSERT INTO sys_auth_operator(
												id,
												operator_id,
												role_ids
									)VALUES(
								#{id},
												#{operatorId},
												#{roleIds}
									)
		]]>
		<selectKey resultType="long" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID
		</selectKey>
	</insert>

	<update id="update" parameterType="AuthOperator">
		<![CDATA[
			UPDATE sys_auth_operator SET
														operator_id=#{operatorId},
																role_ids=#{roleIds}
										WHERE id=#{id}
		]]>
	</update>

	<delete id="delete" parameterType="long">
		<![CDATA[
			DELETE FROM sys_auth_operator WHERE id=#{id}
		]]>
	</delete>
</mapper>
